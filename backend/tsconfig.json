{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "es6",
    "lib": ["es2016", "dom"],
    "esModuleInterop": true,
    "strict": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
